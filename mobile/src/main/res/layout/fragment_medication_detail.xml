<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent">


    <TextView android:id="@+id/medication_name"
        android:text="@string/detail_med_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:textSize="30sp"
        android:textColor="#FF267F00"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal" />

    <ImageView android:id="@+id/medication_image"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img_description"
        android:src="@drawable/no_image"
        android:layout_below="@+id/medication_name"
        android:layout_alignParentEnd="true"
        android:background="@drawable/image_border"/>

    <ListView android:id="@+id/medication_alarms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/medication_image"
        android:layout_alignTop="@+id/medication_image" />

</RelativeLayout>